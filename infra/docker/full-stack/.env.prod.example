# ==============================================================================
# KGC ERP v7.0 - Production Environment Variables
# Epic 33-5: Production Setup (ADR-045)
# ==============================================================================
#
# Copy this file to .env.prod and fill in the values.
# NEVER commit .env.prod to version control!
#
# ==============================================================================

# ==============================================================================
# DOMAINS (Caddy will automatically get SSL certificates)
# ==============================================================================
KGC_DOMAIN=app.kgc.hu
API_DOMAIN=api.kgc.hu
CRM_DOMAIN=crm.kgc.hu
SUPPORT_DOMAIN=support.kgc.hu
HR_DOMAIN=hr.kgc.hu
ADMIN_EMAIL=admin@kgc.hu

# ==============================================================================
# KGC CORE
# ==============================================================================
NODE_ENV=production

# Database
KGC_DB_USER=kgc
KGC_DB_PASSWORD=<GENERATE_STRONG_PASSWORD>
KGC_DB_NAME=kgc_erp

# Redis
KGC_REDIS_URL=redis://kgc-redis:6379

# Auth
JWT_SECRET=<GENERATE_64_CHAR_SECRET>
JWT_REFRESH_SECRET=<GENERATE_64_CHAR_SECRET>

# Application
APP_BASE_URL=https://api.kgc.hu
CORS_ORIGINS=https://app.kgc.hu,https://admin.kgc.hu

# MinIO (Object Storage)
MINIO_ACCESS_KEY=<GENERATE_ACCESS_KEY>
MINIO_SECRET_KEY=<GENERATE_SECRET_KEY>

# ==============================================================================
# SENTRY (Error Tracking - Epic 33-7)
# ==============================================================================
SENTRY_DSN_API=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_DSN_WEB=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_ENVIRONMENT=production

# ==============================================================================
# TWENTY CRM
# ==============================================================================
TWENTY_DB_USER=twenty
TWENTY_DB_PASSWORD=<GENERATE_STRONG_PASSWORD>
TWENTY_DB_NAME=twenty
TWENTY_APP_SECRET=<GENERATE_64_CHAR_SECRET>
TWENTY_SERVER_URL=https://crm.kgc.hu
TWENTY_FRONT_URL=https://crm.kgc.hu

# ==============================================================================
# CHATWOOT
# ==============================================================================
CHATWOOT_DB_USER=chatwoot
CHATWOOT_DB_PASSWORD=<GENERATE_STRONG_PASSWORD>
CHATWOOT_DB_NAME=chatwoot_production
CHATWOOT_SECRET_KEY=<GENERATE_64_CHAR_SECRET>
CHATWOOT_REDIS_PASSWORD=<GENERATE_STRONG_PASSWORD>
CHATWOOT_FRONTEND_URL=https://support.kgc.hu

# ==============================================================================
# HORILLA HR
# ==============================================================================
HORILLA_DB_USER=horilla
HORILLA_DB_PASSWORD=<GENERATE_STRONG_PASSWORD>
HORILLA_DB_NAME=horilla
HORILLA_SECRET_KEY=<GENERATE_64_CHAR_SECRET>
HORILLA_DEBUG=False
HORILLA_ALLOWED_HOSTS=hr.kgc.hu,localhost
HORILLA_SITE_URL=https://hr.kgc.hu
HORILLA_CSRF_ORIGINS=https://hr.kgc.hu

# ==============================================================================
# GENERATED SECRETS HELPER
# ==============================================================================
# Generate secure secrets with:
#   openssl rand -hex 32   # For 64-char secrets
#   openssl rand -hex 16   # For passwords
#   openssl rand -base64 24 # Alternative format
#
# Example:
#   JWT_SECRET=$(openssl rand -hex 32)
# ==============================================================================
