# ==============================================================================
# KGC ERP v7.0 - Staging Environment Variables
# Copy to .env.staging and fill in values
# ==============================================================================

# ==============================================================================
# General
# ==============================================================================
NODE_ENV=staging
TZ=Europe/Budapest

# ==============================================================================
# KGC Core Services
# ==============================================================================

# API Configuration
KGC_API_PORT=3000
APP_BASE_URL=https://staging.kgc.local

# Web Configuration
KGC_WEB_PORT=8080
VITE_API_URL=https://api.staging.kgc.local
VITE_APP_NAME=KGC_ERP_STAGING
VITE_APP_VERSION=7.0.0-staging

# Database
KGC_DB_PORT=5432
KGC_DB_USER=kgc
KGC_DB_PASSWORD=staging_db_password_change_me
KGC_DB_NAME=kgc_erp_staging

# Redis
KGC_REDIS_PORT=6379

# JWT Secrets (generate with: openssl rand -base64 64)
JWT_SECRET=staging_jwt_secret_change_me_to_random_64_char_string
JWT_REFRESH_SECRET=staging_refresh_secret_change_me_to_random_64_char_string

# MinIO (S3-compatible storage)
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ACCESS_KEY=staging_minio_access
MINIO_SECRET_KEY=staging_minio_secret_change_me

# ==============================================================================
# Twenty CRM
# ==============================================================================
TWENTY_PORT=3001
TWENTY_DB_PORT=5433
TWENTY_DB_USER=twenty
TWENTY_DB_PASSWORD=staging_twenty_password_change_me
TWENTY_DB_NAME=twenty_staging
TWENTY_REDIS_PORT=6380
TWENTY_SERVER_URL=https://crm.staging.kgc.local
TWENTY_FRONT_URL=https://crm.staging.kgc.local
TWENTY_APP_SECRET=staging_twenty_secret_change_me_to_random_64_char

# ==============================================================================
# Chatwoot
# ==============================================================================
CHATWOOT_PORT=3002
CHATWOOT_VERSION=latest-ce
CHATWOOT_DB_PORT=5435
CHATWOOT_DB_USER=chatwoot
CHATWOOT_DB_PASSWORD=staging_chatwoot_password_change_me
CHATWOOT_DB_NAME=chatwoot_staging
CHATWOOT_REDIS_PORT=6381
CHATWOOT_REDIS_PASSWORD=staging_chatwoot_redis_password_change_me
CHATWOOT_SECRET_KEY=staging_chatwoot_secret_change_me_to_random_64_char
CHATWOOT_FRONTEND_URL=https://support.staging.kgc.local

# ==============================================================================
# Horilla HR
# ==============================================================================
HORILLA_PORT=3003
HORILLA_DB_PORT=5434
HORILLA_DB_USER=horilla
HORILLA_DB_PASSWORD=staging_horilla_password_change_me
HORILLA_DB_NAME=horilla_staging
HORILLA_SECRET_KEY=staging_horilla_secret_change_me_to_random_64_char
HORILLA_DEBUG=True
HORILLA_ALLOWED_HOSTS=localhost,127.0.0.1,horilla-app,hr.staging.kgc.local
HORILLA_SITE_URL=https://hr.staging.kgc.local
HORILLA_CSRF_ORIGINS=https://hr.staging.kgc.local

# ==============================================================================
# Optional: Sentry Error Tracking
# ==============================================================================
# SENTRY_DSN_API=https://your-sentry-dsn-here

# ==============================================================================
# Notes for staging.kgc.local setup:
#
# 1. Add to /etc/hosts:
#    127.0.0.1 staging.kgc.local api.staging.kgc.local crm.staging.kgc.local support.staging.kgc.local hr.staging.kgc.local
#
# 2. Trust the self-signed certificate in your browser
#    (Caddy uses internal CA for *.staging.kgc.local)
#
# 3. Start with:
#    docker compose -f docker-compose.yml -f docker-compose.staging.yml --env-file .env.staging up -d
#
# 4. Access:
#    - Frontend: https://staging.kgc.local
#    - API: https://api.staging.kgc.local
#    - CRM: https://crm.staging.kgc.local
#    - Support: https://support.staging.kgc.local
#    - HR: https://hr.staging.kgc.local
#    - MinIO Console: http://localhost:9001
#
# ==============================================================================
