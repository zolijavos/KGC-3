# ==============================================================================
# KGC ERP v7.0 - Full Stack Environment Configuration
# Epic 33-4: Docker Environment Variables
# ==============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ==============================================================================

# ==============================================================================
# GENERAL
# ==============================================================================
NODE_ENV=production

# ==============================================================================
# KGC CORE
# ==============================================================================
# API
KGC_API_PORT=3000
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-refresh-token-secret-key
APP_BASE_URL=http://localhost:3000

# Web Frontend
KGC_WEB_PORT=80
VITE_API_URL=http://localhost:3000
VITE_APP_NAME=KGC_ERP
VITE_APP_VERSION=7.0.0

# Database
KGC_DB_PORT=5432
KGC_DB_USER=kgc
KGC_DB_PASSWORD=your-secure-kgc-db-password
KGC_DB_NAME=kgc_erp

# Redis
KGC_REDIS_PORT=6379

# MinIO (S3-compatible storage)
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your-secure-minio-password

# ==============================================================================
# TWENTY CRM
# ==============================================================================
TWENTY_PORT=3001
TWENTY_APP_SECRET=your-twenty-app-secret-min-32-chars
TWENTY_SERVER_URL=http://localhost:3001
TWENTY_FRONT_URL=http://localhost:3001

# Twenty Database
TWENTY_DB_PORT=5433
TWENTY_DB_USER=twenty
TWENTY_DB_PASSWORD=your-secure-twenty-db-password
TWENTY_DB_NAME=twenty

# Twenty Redis
TWENTY_REDIS_PORT=6380

# ==============================================================================
# CHATWOOT
# ==============================================================================
CHATWOOT_VERSION=latest-ce
CHATWOOT_PORT=3002
CHATWOOT_SECRET_KEY=your-chatwoot-secret-key-min-64-chars
CHATWOOT_FRONTEND_URL=http://localhost:3002

# Chatwoot Database
CHATWOOT_DB_PORT=5435
CHATWOOT_DB_USER=chatwoot
CHATWOOT_DB_PASSWORD=your-secure-chatwoot-db-password
CHATWOOT_DB_NAME=chatwoot_production

# Chatwoot Redis
CHATWOOT_REDIS_PORT=6381
CHATWOOT_REDIS_PASSWORD=your-secure-chatwoot-redis-password

# ==============================================================================
# HORILLA HR
# ==============================================================================
HORILLA_PORT=3003
HORILLA_SECRET_KEY=your-horilla-django-secret-key-min-50-chars
HORILLA_DEBUG=False
HORILLA_ALLOWED_HOSTS=localhost,127.0.0.1,horilla-app
HORILLA_SITE_URL=http://localhost:3003
HORILLA_CSRF_ORIGINS=http://localhost:3003,http://127.0.0.1:3003

# Horilla Database
HORILLA_DB_PORT=5434
HORILLA_DB_USER=horilla
HORILLA_DB_PASSWORD=your-secure-horilla-db-password
HORILLA_DB_NAME=horilla

# ==============================================================================
# OPTIONAL: Email Configuration (for Chatwoot & Horilla)
# ==============================================================================
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
