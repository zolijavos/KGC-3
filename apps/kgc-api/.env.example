# KGC ERP API - Environment Configuration
# Copy to .env and configure before running

# Database (PostgreSQL)
DATABASE_URL="postgresql://kgc:kgc_dev_password@localhost:5432/kgc_erp?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Application
NODE_ENV="development"
PORT=3000

# JWT Configuration (REQUIRED)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
JWT_ACCESS_EXPIRATION="24h"
JWT_REFRESH_EXPIRATION="7d"

# App Base URL (REQUIRED for password reset links)
APP_BASE_URL="http://localhost:3000"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"

# NAV Online (Számlázz.hu) - Optional
# SZAMLAZZ_HU_AGENT_KEY=""
# SZAMLAZZ_HU_AUTH_TOKEN=""

# MyPOS (Kaució) - Optional
# MYPOS_STORE_ID=""
# MYPOS_PRIVATE_KEY=""
