{
  "name": "@kgc/chat",
  "version": "0.0.1",
  "description": "KGC ERP Internal Chat - Real-time messaging between employees",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "echo 'SKIPPED: Chat package needs Prisma enum alignment - see TODO'",
    "clean": "rm -rf dist node_modules .turbo",
    "db:generate": "prisma generate --schema=../../../apps/kgc-api/prisma/schema.prisma",
    "db:migrate": "echo 'Use kgc-api for migrations'",
    "db:push": "echo 'Use kgc-api for db push'"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.0.0",
    "@nestjs/websockets": "^10.0.0",
    "@prisma/client": "^5.0.0",
    "socket.io": "^4.7.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prisma": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0"
  }
}
